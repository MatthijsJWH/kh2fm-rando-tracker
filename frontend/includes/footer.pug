mixin popup(name)
  .popup
    button= name
    .content
      .body
        block

footer
  .container
    .info Kingdom Hearts 2 Final Mix Item Tracker - Version 1.5
    .info
      a(href="old") Click here
      |
      | to use the pre-1.4 version
    .info If you want to change the layout, please use the
      | 
      a(href="next") 2.0 preview
      |
      | (it's much easier there)
    .buttons
      +popup("About")
        include about.pug

      +popup("Help")
        include help.pug

      +popup("Co-op")
        include co_op.pug

      +popup("Settings")
        include settings.pug
